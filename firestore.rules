rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null
        && request.auth.token.email in [
          "s.e.t.i.inteligencia2@gmail.com",
          "s.e.t.i.inteligencia3@gmail.com",
          "djeimeipeidju@gmail.com"
        ];
    }

    // Leitura pública de tudo
    match /{document=**} {
      allow read: if true;
    }

    // Escrever posts (criar/editar/apagar) — só admins
    match /posts/{postId} {
      allow create, update, delete: if isAdmin();
      allow read: if true;

      // Subcoleção de comentários
      match /comments/{commentId} {
        allow read: if true;
        allow create, update, delete: if isAdmin();
      }
    }
  }
}
